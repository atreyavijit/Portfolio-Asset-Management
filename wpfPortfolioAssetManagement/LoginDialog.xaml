        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfPortfolioAssetManagement"
        mc:Ignorable="d"
        Title="User Login" Height="182.996" Width="371.099">
    <Grid>
        <Label Content="Email Address:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tbLoginEmail" HorizontalAlignment="Left" Height="23" Margin="103,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="233"/>
        <PasswordBox Name="tbLoginPassword" HorizontalAlignment="Left" Height="23" Margin="101,60,0,0" VerticalAlignment="Top" Width="233"/>
        <Button Name="btLogin" IsDefault="True" Content="Login &gt;" HorizontalAlignment="Left" Margin="103,110,0,0" VerticalAlignment="Top" Width="111" Click="BtLogin_Click"/>

    </Grid>
</Window>
